@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WILLNPO_Diya_</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/WILLNPO_Diya_.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3 custom-navbar">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">The Mount Edgecombe Community NPO</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between align-items-center">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                       
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Community" asp-action="Index">Essence</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Paypal" asp-action="Index">Ways to Help</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Events" asp-action="Index">Events</a>
                        </li>
                       @if (User.IsInRole("Admin"))
    {
                        { 
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Events" asp-action="AdminPanel">Admin Panel</a>
                            </li>
                        }
    }

                    </ul>
                    <div class="d-flex align-items-center">
                        <partial name="_LoginPartial" />
                        <a href="/appAPK/M.E.C_NPO-v1.0-release.apk" download class="ms-3">
                            <button class="btn btn-classy">Check out our app</button>
                        </a>
                    </div>

                </div>
            </div>
        </nav>
    </header>


    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</body>
<!-- HTML -->
<footer class="footer">
    <div class="footer-container">
        <div class="footer-section">
            <h3>About Us</h3>
            <p>Our mission is to honor the legacy of our forebears, acknowledge the contributions of our community, and celebrate cultural pride. Join us in making a difference.</p>
        </div>

        <div class="footer-section">
            <h3>Contact Us</h3>
            <p>Email: mountedgecombenpo@gmail.com</p>
            <p>Phone: +27 74 1349016</p>
            <p>Address:Mount Edgecombe, South Africa</p>
        </div>

        <div class="footer-section">
            <h3>Follow Us</h3>
            <a href="https://www.facebook.com/share/15TrDmJNwr/" target="_blank">Facebook</a><br>
            <a href="https://www.instagram.com/YourProfile" target="_blank">Instagram</a><br>
          
        </div>

        <div class="footer-section">
            <h3>Quick Links</h3>
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            <a class="nav-link text-dark" asp-area="" asp-controller="Paypal" asp-action="Index">Ways to Help</a>
            <a class="nav-link text-dark" asp-area="" asp-controller="Community" asp-action="Index">Essence</a>
            <a class="nav-link text-dark" asp-area="" asp-controller="Events" asp-action="Index">Events</a>
        
        </div>
    </div>
    <div class="footer-bottom">
        © 2024 Mount Edgecombe Community NPO. All rights reserved.
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)

</html>
